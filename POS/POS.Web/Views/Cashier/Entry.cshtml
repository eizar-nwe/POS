@model CashierViewModel
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<h3>Cashier Entry Form</h3>

<form action="/Cashier/entry" method="post">

    <div class="row-side">
        <div class="col-side">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" name="Name" id="txtName" placeholder="enter Name here" required />
        </div>
    </div>

    <div class="row-side">
        <div class="col-side">
            <label for="Gender" class="form-label">Gender</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="Gender" id="GenderF" value="F" checked>
                <label class="form-check-label" for="GenderF">Female</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="Gender" id="GenderM" value="M">
                <label class="form-check-label" for="GenderM">Male</label>
            </div>
        </div>
    </div>

    <div class="row-side">
        <div class="col-side">
            <label for="Email" class="form-label">Email</label>
            <input type="text" class="form-control" name="Email" id="txtEmail" placeholder="enter Email here" />
        </div>
        <div class="col-side">
            <label for="Phone" class="form-label">Phone</label>
            <input type="text" class="form-control" name="Phone" id="txtPhone" placeholder="enter Phone here" />
        </div>
    </div>

    <div class="row-bottom">
        <div class="col-side">
            <label for="Address" class="form-label">Address</label>
            <textarea class="form-control" name="Address" id="txtAddress" placeholder="enter Address here"></textarea>
        </div>
    </div>

    <div class="row-bottom">
        <div class="col-side">
            <label for="Remarks" class="form-label">Remarks</label>
            <textarea class="form-control" name="Remarks" id="txtRemarks" placeholder="enter Remarks here"></textarea>
        </div>
    </div>

    <button type="submit" class="btn btn-add" id="btnEntry">Entry</button>
    <a href="List" class="btn btn-secondary">Cancel</a>
</form>

<script>
    $(document).ready(function (){
        $('#btnEntry').attr('disabled',true);

        function toogleEntryButton(){
            if ($('#txtName').val().length != 0){
                $('#btnEntry').attr('disabled',false);
            }
            else {
                $('#btnEntry').attr('disabled',true);
            }
        };

        $('#txtName').keyup(function(){
            toogleEntryButton();
        });

    });
</script>