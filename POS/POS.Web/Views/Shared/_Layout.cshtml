<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/POS.Web.styles.css" asp-append-version="true" />

    <!--using datatable.net  from CDN -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.0/css/dataTables.dataTables.css" />

    <link href="~/css/common.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">POS.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" 
                                style="color:black;">Stock Group</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/StockGroup/List" style="color:black;">List</a></li>
                                <li><a class="dropdown-item" href="/StockGroup/Entry" style="color:black;">Entry</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               style="color:black;">Stock Item</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/StockItem/List" style="color:black;">List</a></li>
                                <li><a class="dropdown-item" href="/StockItem/Entry" style="color:black;">Entry</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               style="color:black;">Supplier</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Supplier/List" style="color:black;">List</a></li>
                                <li><a class="dropdown-item" href="/Supplier/Entry" style="color:black;">Entry</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               style="color:black;">Stock Income</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/stockincome/List" style="color:black;">List</a></li>
                                <li><a class="dropdown-item" href="/stockincome/Entry" style="color:black;">Entry</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               style="color:black;">Cashier</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Cashier/List" style="color:black;">List</a></li>
                                <li><a class="dropdown-item" href="/Cashier/Entry" style="color:black;">Entry</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               style="color:black;">Member</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/member/List" style="color:black;">List</a></li>
                                <li><a class="dropdown-item" href="/member/Entry" style="color:black;">Entry</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               style="color:black;">Member Discount</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/MemberDiscount/List" style="color:black;">List</a></li>
                                <li><a class="dropdown-item" href="/MemberDiscount/Entry" style="color:black;">Entry</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               style="color:black;">Sale Order</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/SaleOrder/List" style="color:black;">List</a></li>
                                <li><a class="dropdown-item" href="/SaleOrder/Entry_Order" style="color:black;">Entry</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - POS.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--using JS Lib datatable.net  from CDN -->
    <script src="https://cdn.datatables.net/2.3.0/js/dataTables.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
